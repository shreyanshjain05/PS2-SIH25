# =====================================
# Environment Variables Example
# Copy this file to .env and fill in the values
# =====================================

# =====================================
# Database Configuration
# =====================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=sih_auth

# Database URLs (PostgreSQL)
DATABASE_URL_AUTH=postgresql://postgres:your_secure_password@localhost:5432/sih_auth
DATABASE_URL_CITIZEN=postgresql://postgres:your_secure_password@localhost:5432/sih_citizen
DATABASE_URL_BUSINESS=postgresql://postgres:your_secure_password@localhost:5432/sih_business
DATABASE_URL_GOV=postgresql://postgres:your_secure_password@localhost:5432/sih_gov

# =====================================
# Redis Configuration
# =====================================
REDIS_HOST=localhost
REDIS_PORT=6379

# =====================================
# ML Service Configuration
# =====================================
ML_SERVICE_URL=http://localhost:8000
ML_DATA_PATH=/app/ml_data

# =====================================
# Authentication (Better Auth)
# =====================================
# Generate a secure secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your_secure_random_secret_here
BETTER_AUTH_URL=http://localhost:3000

# =====================================
# Razorpay Payment Gateway
# =====================================
# Get these from Razorpay Dashboard: https://dashboard.razorpay.com/
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret_key
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx

# =====================================
# Next.js Configuration
# =====================================
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NODE_ENV=development

# =====================================
# OpenTelemetry (Observability)
# =====================================
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://otel-collector:4318/v1/traces
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://otel-collector:4318/v1/metrics

# =====================================
# Docker Compose Overrides (Optional)
# =====================================
# Uncomment and modify as needed for local development
# COMPOSE_PROJECT_NAME=ps2-sih25
