generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  schemas  = ["public", "citizen", "business", "gov"]
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified Boolean?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  role          Role      @default(CITIZEN)
  accounts      Account[]
  apiKeys       ApiKey[]
  sessions      Session[]

  @@map("user")
  @@schema("public")
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
  @@schema("public")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
  @@schema("public")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
  @@schema("public")
}

model ApiKey {
  id        String    @id @default(cuid())
  key       String    @unique
  name      String?
  start     String?
  prefix    String?
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  expiresAt DateTime?
  lastUsed  DateTime?
  rateLimit Int       @default(1000)

  // Better Auth specific fields
  refillInterval      Int?
  refillAmount        Int?
  lastRefillAt        DateTime?
  enabled             Boolean   @default(true)
  rateLimitEnabled    Boolean   @default(false)
  rateLimitTimeWindow Int?
  rateLimitMax        Int?
  requestCount        Int       @default(0)
  remaining           Int?
  lastRequest         DateTime?
  metadata            String?

  @@map("api_key")
  @@schema("public")
}

enum Role {
  CITIZEN
  GOVT
  ENTERPRISE

  @@schema("public")
}

// Citizen Service Models
model Citizen {
  id        String     @id @default(cuid())
  userId    String     @unique // Link to Auth User
  name      String?
  phone     String?
  address   String?
  documents Document[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("citizen")
  @@schema("citizen")
}

model Document {
  id        String   @id @default(cuid())
  citizenId String
  citizen   Citizen  @relation(fields: [citizenId], references: [id])
  fileUrl   String
  name      String
  type      String?
  createdAt DateTime @default(now())

  @@map("document")
  @@schema("citizen")
}

// Business Service Models
model Business {
  id         String   @id @default(cuid())
  userId     String   @unique // Link to Auth User
  name       String
  usageLimit Int      @default(1000)
  usageCount Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("business")
  @@schema("business")
}

// Government Service Models
model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String
  resource  String
  ipAddress String?
  details   String? // JSON string
  createdAt DateTime @default(now())

  @@map("audit_log")
  @@schema("gov")
}
