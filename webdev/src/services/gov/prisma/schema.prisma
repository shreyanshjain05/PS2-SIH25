generator client {
    provider = "prisma-client-js"
    output   = "../../../../node_modules/@prisma/client-gov"
}

datasource db {
    provider = "postgresql"
}

model AuditLog {
    id        String   @id @default(cuid())
    userId    String
    action    String
    resource  String
    ipAddress String?
    details   String? // JSON string
    createdAt DateTime @default(now())

    @@map("audit_log")
}
